---
interface Job {
  title: string;
  company: string;
  year: string;
  description: string;
}
const { jobs = [] } = Astro.props as { jobs?: Job[] };
---

<section id="experiencia" class="mb-12">
  <h2 class="text-2xl font-semibold text-blue-600 mb-4">Experiencia Laboral</h2>
  <ul class="space-y-6">
    {jobs.map((job) => (
      <li class="border-l-4 border-blue-500 pl-4">
        <h3 class="text-xl font-semibold">{job.title} - <span class="text-blue-700">{job.company}</span></h3>
        <p class="text-sm text-gray-500 mb-1">{job.year}</p>
        <p>{job.description}</p>
      </li>
    ))}
  </ul>
</section>
