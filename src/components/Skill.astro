---
// src/components/Skill.astro
interface Skill {
  name: string;
  iconPath: string;
}

const { skills = [] } = Astro.props as { skills?: Skill[] };
---

<section id="habilidades" class="mb-12">
  <h2 class="text-2xl font-semibold text-white-600 mb-4">Habilidades TÃ©cnicas</h2>
  <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-6">
    {skills.map(skill => (
      <div class="flex flex-col items-center">
        <img
          src={skill.iconPath}
          alt={skill.name}
          class="w-12 h-12 rounded-full shadow-lg hover:scale-110 transition duration-200 ease-in-out"
        />
        <span class="mt-2 text-sm text-center">{skill.name}</span>
      </div>
    ))}
  </div>
</section>
